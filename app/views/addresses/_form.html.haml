= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :film
    = f.text_field :film
  .field
    = f.label :cinema
    = f.text_field :cinema
  .actions
    = f.submit 'Сохранить'
