= form_for @actor do |f|
  - if @actor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@actor.errors.count, "error")} prohibited this actor from being saved:"
      %ul
        - @actor.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :ln
    = f.text_area :ln
  .field
    = f.label :fn
    = f.text_area :fn
  .field
    = f.label :sn
    = f.text_area :sn
  .field
    = f.label :birthday
    = f.date_select :birthday
  .actions
    = f.submit 'Сохранить'
