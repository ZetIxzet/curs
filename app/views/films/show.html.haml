=breadcrumb_tag do
  %li.active
    = @film.name
  %li
    = link_to 'Фильмы', films_path
  %li
    Кинотеатры/Фильмы

%h1= @film.name

%dl
  %dt= Film.human_attribute_name(:name)
  %dd= @film.name

  %dt= Film.human_attribute_name(:genre)
  %dd= @film.genre

  %dt= Film.human_attribute_name(:lasting)
  %dd= @film.lasting

  %dt= Film.human_attribute_name(:country)
  %dd= @film.country

  %dt= Film.human_attribute_name(:companies)
  %dd= @film.companies

  %dt= Film.human_attribute_name(:min_age)
  %dd= @film.min_age

= link_to edit_film_path(@film), class: 'btn btn-info' do
  = fa_icon :edit
  = t('buttons.edit')
= link_to @film, :method => :delete,
:data => { :confirm => t('buttons.confirm.film') },
class: 'btn btn-danger' do
  = fa_icon :times
  = t('buttons.destroy')